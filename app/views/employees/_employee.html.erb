<table>
  <% if employees.empty? %>
    <p>There is no record</p>
  <% else %>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Action</th>
    </tr>
  <% end %>

  <% employees.each do |employee| %>
    <tr>
      <td><%= employee["id"] %></td>
      <td><%= employee["email"] %></td>
      <td><%= employee["first_name"] %></td>
      <td><%= employee["last_name"] %></td>
      <td><%= link_to "Details", employee_path(employee["id"]) %></td>
    </tr>
  <% end %>

</table>